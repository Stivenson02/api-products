
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id        Int      @id @default(autoincrement())
  title     String
  category  String
  price     Float
  image     String
  createdAt DateTime @default(now())
}

model User {
  id       Int       @id @default(autoincrement())
  phone    String    @unique
  name     String?
  email    String?
  messages Message[]
}

model Message {
  id        Int      @id @default(autoincrement())
  message   String
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}
